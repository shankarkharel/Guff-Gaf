<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000D0E"
    tools:context=".ChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#303F9F">


    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/chat_custombar"
        layout="@layout/chat_custombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/chat_message"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="#05AE3F3F"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Your Message"
        android:inputType="textLongMessage|textMultiLine"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FBE4E4" />

    <ImageButton
        android:id="@+id/chat_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="30dp"
        android:background="#000D0E"
        app:srcCompat="@drawable/ic_send_icon" />

    <ImageButton
        android:id="@+id/chat_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:background="#000D0E"
        app:srcCompat="@drawable/ic_add_photo_icon" />


</RelativeLayout>