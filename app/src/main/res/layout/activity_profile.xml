<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100000"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile_imageView"
        android:layout_width="415dp"
        android:layout_height="342dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="2dp"
        android:background="#100000" />

    <Button
        android:id="@+id/profile_displayname"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="358dp"
        android:background="#100000"
        android:textColor="#FBF7F7" />

    <Button
        android:id="@+id/profile_status"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:background="#100000"
        android:textColor="#FBF7F7" />

    <Button
        android:id="@+id/profile_sendrequest"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_status"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="80dp"
        android:background="#07074E"
        android:text="send Request"
        android:textColor="#FBF7F7" />

    <Button
        android:id="@+id/profile_declinerequest"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_sendrequest"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="-52dp"
        android:background="#E64A19"
        android:text="Decline Request"
        android:textColor="#FBF7F7" />

    <ImageButton
        android:id="@+id/prifile_back_button"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_back"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>